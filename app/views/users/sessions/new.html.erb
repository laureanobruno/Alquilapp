<head>
  <script src="https://kit.fontawesome.com/38e5d75ed7.js" crossorigin="anonymous"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&display=swap" rel="stylesheet">
</head>

<body>

  <div class="container vh-100">

  
    <div class="row mb-auto mx-auto" style="width: 90%; margin-top:40%;">
      <%= image_tag "ingresar.png"%>
    </div>

    <!--<div class="row mb-auto mt-3 mx-auto">
      <h1 class="text-center montserrat-title", style="font-size: 2.5rem;">ALQUILAPP</h1>
    </div>-->

  
    <div class="row mb-5" style="position: fixed; bottom: 0; width: 100%; display: flex;">
      <div class="col-10 bg-white rounded-4 mx-auto shadow">
        <br>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="input-group mb-3 rounded-5 mx-auto" style="width:90%">
            <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-at"></i></span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "form-control input-group-form"%>
          </div>

          <div class="input-group mb-3 rounded-5 mx-auto" style="width:90%">
            <span class="input-group-text" id="basic-addon1"><i desabled class="fa-solid fa-lock"></i></span>
            <%= f.password_field :password, autocomplete: "new-password", required: true, id:"user_password", class: "form-control input-group-form" %>
            <span id="eye" class="input-group-text input-group-form" id="basic-addon1"><i class="fa-regular fa-eye"></i></span>
          </div>

          <br>

          <div class="text-center mx-auto" style="width:90%">
            <%= f.submit "ingresar", class:"btn montserrat-text rounded-5" %>
          </div>

          <br>

          <div class="text-center">
            <p class="montserrat-text" style="font-size:0.8rem"> AÃºn no tiene una cuenta? <%= render "users/shared/links", class:"montserrat-text" %></p>
          </div>
        <% end %>
      </div>
    </div>

  </div>

</body>


